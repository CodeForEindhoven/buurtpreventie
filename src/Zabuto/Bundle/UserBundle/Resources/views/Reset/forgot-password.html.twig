{% extends "base.html.twig" %}

{% block title %}Gebruiker wachtwoord resetten{% endblock %}

{% block content %}
    {% trans_default_domain 'FOSUserBundle' %}
    
    <div class="container pageheader">
        <h1 class="pull-left">Inlog <span>wachtwoord resetten</span></h1>
    </div>

    <br>
    {% if error %}
        <div class="alert alert-warning" role="alert">{{ error }}</div>
    {% endif %}
    <div class="row">
        <div class="col-xs-6">
            <form action="{{ path('zabuto_user_reset_password') }}" method="post" autocomplete="off">
                <p class="lead"><strong>Email adres</strong></p>
                <input type="email" id="email" name="email" class="form-control" required="required"
                       placeholder="{{ 'security.login.username_placeholder'|trans }}">
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">{{ 'form.button.send'|trans }}</button>
                    <button id="btnCancel" class="btn btn-default"
                            type="button">{{ 'form.button.cancel'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $("#email").focus();
        });
        $("#btnCancel").click(function () {
            window.location = '{{ path("fos_user_security_login") }}';
        });
    </script>
{% endblock %}