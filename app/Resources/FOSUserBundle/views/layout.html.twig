{% extends "base.html.twig" %}

{% block content %}
    <!-- messages -->
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-info {{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- fos_user_content -->
    {% block fos_user_content %}{% endblock fos_user_content %}

{% endblock %}
